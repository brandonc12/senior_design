    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.unpaidquant %></td>
    <td><%= item.diner1q %></td>
    <td><%= item.diner2q %></td>
    <td><%= item.diner3q %></td>
    <td><%= item.diner4q %></td>
    <td><%= item.diner5q %></td>
    <td><%= item.diner6q %></td>
    <td><%= item.diner7q %></td>
    <td><%= item.diner8q %></td>
    <td><%= item.diner9q %></td>
    <td><%= item.diner10q %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

